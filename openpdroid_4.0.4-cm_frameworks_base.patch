+
+uint32_t FMRadioDataSource::getSampleRate() {
+    return mSampleRate;
+}
+
+uint32_t FMRadioDataSource::getFormat() {
+    if (mFormat == android_audio_legacy::AudioSystem::PCM_16_BIT) {
+        return 16;
+    } else if (mFormat == android_audio_legacy::AudioSystem::PCM_8_BIT) {
+        return 8;
+    }
